<odoo>
    <record id="contract_line_config_base_view_form" model="ir.ui.view">
        <field name="name">contract.line.config.base.form</field>
        <field name="model">contract.line</field>
        <field name="arch" type="xml">
            <form string="Contract Line Base Configurator">
                <sheet>
                    <field name="contract_id" invisible="1" />
                    <field name="partner_id" invisible="1" />
                    <field name="pricelist_id" invisible="1" />
                    <field name="company_id" invisible="1" />
                    <field name="state" invisible="1" />
                    <!-- There is some magic here, please look at models/ir_ui_view.py
                        We dynamically retrieve all field from the contract order form
                    -->
                </sheet>
                <footer>
                    <button
                        name="save_add_product_and_close"
                        string="Save &amp; Close"
                        type="object"
                        class="btn-primary"
                    />
                    <button
                        name="save_add_product_and_new"
                        string="Save &amp; New"
                        type="object"
                        class="btn-primary"
                    />
                    <button
                        name="cancel"
                        string="Cancel"
                        class="btn-secondary"
                        special="cancel"
                    />

                </footer>
            </form>
        </field>
    </record>
    <!-- Due to additional magic easier to keep split -->
    <record id="contract_line_config_option_view_form_base" model="ir.ui.view">
        <field name="model">contract.line</field>
        <field
            name="inherit_id"
            ref="contract_configurator.contract_line_config_base_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='product_id']" position="attributes">
                <attribute
                    name="context"
                    operation="python_dict"
                    key="add_default_option"
                >True</attribute>
            </xpath>
            <xpath expr="//group/field[@name='product_id']" position="attributes">
                <attribute
                    name="domain"
                >[("is_configurable_opt", "=", True)]</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_configurable_opt" invisible="1" />
                <label
                    for="option_ids"
                    attrs="{'invisible': [('is_configurable_opt', '=', False)]}"
                />
                <field
                    name="option_ids"
                    context="{'default_contract_id': contract_id}"
                    attrs="{'invisible': [('is_configurable_opt', '=', False)]}"
                >
                    <tree editable="bottom">
                        <!-- There is some magic here, please look at models/ir_ui_view.py
                            We dynamically retrieve all field from the contract form
                        -->
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record id="contract_line_config_option_view_form" model="ir.ui.view">
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract_line_config_option_view_form_base" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='option_ids']/tree/field[@name='quantity']"
                position="before"
            >
                <field name="option_unit_qty" string="Qty" />
                <field name="option_qty_type" string="Qty type" invisible="0" />
                <field name="allowed_uom_categ_id" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='option_ids']/tree/field[@name='quantity']"
                position="attributes"
            >
                <attribute name="readonly">1</attribute>
                <attribute name="string">Total Qty</attribute>
            </xpath>
            <xpath
                expr="//field[@name='option_ids']/tree/field[@name='product_id']"
                position="attributes"
            >
                <attribute
                    name="domain"
                >[('is_option', '=', True),('used_on_product_ids', '=', parent.product_id)]</attribute>
            </xpath>
            <!-- In case that you have the configurator activated -->
            <!-- <xpath
                expr="//field[@name='option_ids']/tree/field[@name='product_template_id']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <xpath
                expr="//field[@name='option_ids']/tree/field[@name='product_id']"
                position="attributes"
            >
                <attribute name="optional" />
                <attribute name="string">Product</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_contract_line_config_base">
        <field name="name">Contract Line Configure bases</field>
        <field name="res_model">contract.line</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="contract_line_config_base_view_form" />
    </record>

    <record id="view_contract_form" model="ir.ui.view">
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='contract_line_ids']" position="before">
                <field name="id" invisible="1" />
                <button
                    name="%(action_contract_line_config_base)d"
                    type="action"
                    string="Specify Contract Line"
                    class="btn-primary oe_edit_only oe_left"
                    states="draft,sent"
                    context="{'default_contract_id': id,
                      'default_name': '/', }"
                />
            </xpath>
            <xpath expr="//form/field[@name='display_type']" position="before">
                <field name="is_configurable" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='contract_line_ids']//tree" position="attributes">
                <attribute name="decoration-it">parent_id</attribute>
            </xpath>
            <xpath
                expr="//field[@name='contract_line_ids']//tree/field[@name='price_subtotal']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': [('hide_subtotal', '=', True)]}</attribute>
                <attribute name="string">Opt Subtotal</attribute>
            </xpath>
            <xpath
                expr="//field[@name='contract_line_ids']//tree/field[@name='price_subtotal']"
                position="after"
            >
                <field name="hide_subtotal" invisible="1" />
                <field
                    name="price_config_subtotal"
                    attrs="{'invisible': [('parent_id', '!=', False)]}"
                    string="Subtotal"
                />
                <field name="is_configurable" invisible="1" />
                <field name="parent_id" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='contract_line_ids']//tree/field[@name='sequence']"
                position="after"
            >
                <button
                    name="open_contract_line_config_base"
                    type="object"
                    icon="fa-th"
                    attrs="{'invisible': ['|', ('state', 'not in', ('draft', 'sent')), ('is_configurable', '=', False)]}"
                />
            </xpath>
            <xpath expr="//field[@name='contract_line_ids']" position="attributes">
                <attribute name="bases">{'reload_on_button': true}</attribute>
            </xpath>
            <!-- <xpath
                expr="//field[@name='contract_line_ids']//tree/field[@name='product_template_id']"
                position="attributes"
            >
                <attribute name="class">product</attribute>
            </xpath> -->
        </field>
    </record>

    <!-- <menuitem
        id="menu_product_configurator"
